import java.util.*;
import java.io.*;

public class Main {
	public static void main(String args[]) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		sc.nextLine();
		int x = 0;
		for (int i = 0; i < n; i++) {
			String st = sc.nextLine();
			if (st.charAt(0) == '+' || st.charAt(2) == '+')
				x++;
			else if (st.charAt(0) == '-' || st.charAt(2) == '-')
				x--;
		}

		System.out.println(x);
	}
}
